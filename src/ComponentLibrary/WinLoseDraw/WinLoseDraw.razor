@switch (Outcome)
{
    case Game.Enum.Outcome.Win:
        <img src="/Win.jpg" alt="you're winner" width="250" height="250" />
        break;
    case Game.Enum.Outcome.Lose:
        <img src="/lose.png" alt="you're loser" width="250" height="250" />
        break;
    case Game.Enum.Outcome.Draw:
        <div style="width: 250px; height: 250px;">
            <span>You're... draw :( </span>
        </div>
        break;
    default:
        throw new ArgumentException(nameof(Outcome));
}

@code {
    [Parameter] public Game.Enum.Outcome Outcome { get; set; }
}
